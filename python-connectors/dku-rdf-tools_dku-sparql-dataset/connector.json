{
    "meta" : {
        "label": "SPARQL endpoint",
        "description": "Create a dataset from a SPARQL endpoint",
        "icon": "fas fa-project-diagram"
    },

    "readable": true,
    "writable": false,
    "supportAppend": false,

    "paramsTemplate" : "sparql_input.html",
    "paramsModule" : "dkurdftools.sparqlinput",

    "params": [
        {
            "name": "sep1",
            "label": "Endpoint configuration",
            "type": "SEPARATOR"
        },
        {
            "name": "url",
            "label": "SPARQL endpoint URL",
            "type": "STRING",
            "mandatory": true
        },
        {
            "name": "select_results_type",
            "label": "SELECT results format",
            "description": "For SELECT queries, choose the format used to store results",
            "type": "SELECT",
            "selectChoices" : [
              { "value": "json", "label": "JSON"},
              { "value": "n3", "label": "N3"}
            ],
            "mandatory": false,
            "defaultValue": "json"
        },
        {
            "name": "sep2",
            "label": "Credentials options",
            "type": "SEPARATOR"
        },
        {
            "type": "CREDENTIAL_REQUEST",
            "name": "basic_credentials",
            "label": "Basic auth",
            "mandatory": false,
            "credentialRequestSettings": {
                "type": "BASIC"
            }
        }
    ]
}
